{
  "name": "koa",
  "version": "0.0.0",
  "private": true,
  "description": "A boilerplate for koa. ONLY FOR PROTOTYPING!",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src -e .js,.cjs,.mjs,.ts,.cts,.mts,.json --exec tsx ./src/index.ts",
    "commit": "git-cz",
    "check:deps": "ncu --dep dev,optional,prod,packageManager",
    "check:types": "tsc --noEmit",
    "lint": "run-p lint:eslint lint:markdownlint check:types",
    "lint:eslint": "eslint . --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@modyqyw/utils": "^4.1.0",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-joi-router": "^8.0.0",
    "koa-mount": "^4.0.0",
    "koa-pino-logger": "^4.0.0",
    "koa-sslify": "^5.0.1",
    "koa-static": "^5.0.0",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0"
  },
  "devDependencies": {
    "@modyqyw/fabric": "^7.3.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/koa": "^2.13.5",
    "@types/koa-joi-router": "^8.0.4",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-pino-logger": "^3.0.1",
    "@types/koa-sslify": "^4.0.3",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.2",
    "markdownlint-cli": "^0.33.0",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.7.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "sort-package-json": "^2.4.1",
    "tsx": "^3.12.3",
    "type-fest": "^3.6.1",
    "typescript": "^4.9.5"
  }
}
