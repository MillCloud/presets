{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["type-fest"]
  },
  "include": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
