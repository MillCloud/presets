{
  "extends": "@vue/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": [
      "node",
      "type-fest",
      "unplugin-icons/types/vue",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client.d.ts"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": ["dist", "node_modules", "coverage"]
}
