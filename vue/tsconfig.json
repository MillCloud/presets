{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "element-plus/global",
      "element-pro-components/types/components",
      "jsdom",
      "node",
      "type-fest",
      "unplugin-icons/types/vue",
      "unplugin-vue-macros/macros-global",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "vue/macros-global"
    ]
  },
  "vueCompilerOptions": {
    "plugins": ["@vue-macros/volar/define-model", "@vue-macros/volar/short-vmodel"],
    "shortVmodel": {
      "prefix": "$"
    }
  },
  "include": [
    "**/.*.js",
    "**/.*.cjs",
    "**/.*.mjs",
    "**/.*.ts",
    "**/.*.cts",
    "**/.*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [".cache", ".temp", ".tmp", "cache", "temp", "tmp", "dist*", "node_modules"]
}
